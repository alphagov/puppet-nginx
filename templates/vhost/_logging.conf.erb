<%# Configuration fragment for logging %>

<% 
@access_logs.each { |name, type| 
  name.sub! '{name}', @srvname
-%>
  access_log  /var/log/nginx/<%= name %> <%= type %>;
<% } -%>

<% 
@error_logs.each { |name, type| 
  name.sub! '{name}', @srvname
-%>
  error_log   /var/log/nginx/<%= name %> <%= type %>;
<% } -%>
